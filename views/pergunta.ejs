<%- include partials/header.ejs %>
  <body>
        <%- include partials/navbar.ejs %>

        <div class="container">
                <h1><%= pergunta.titulo %></h1>
                <p><%= pergunta.descricao %></p><hr>
                <form method="POST" action="/responder">
                      <h3>Responda</h3>
                      <label for="">Resposta:</label>
                      <textarea placeholder="Digite a sua resposta" class="form-control" name="corpo" id=""></textarea><br>
                      <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
                      <button type="submit" class="btn btn-primary">Responder</button>
                </form><hr>
                <h3>Respostas</h3>
                <% respostas.forEach(resposta => { %>
                        <div class="card">
                              <div class="card-body">
                                    <p><%= resposta.corpo %></p>
                              </div>
                        </div>
                  <% }) %>
        </div>
  </body>
  <%- include partials/footer.ejs %>